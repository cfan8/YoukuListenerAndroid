<resources>

	<!-- Base application theme. -->
	<style name="YKListenerThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">

		<item name="colorPrimary">@color/LGreen</item>
		<!--   darker variant for the status bar and contextual app bars -->
		<item name="colorPrimaryDark">@color/LGreenDark</item>
		<!--   theme UI controls like checkboxes and text fields -->
		<item name="colorAccent">@color/LGreenAccent</item>
		<item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
		<!-- Customize your theme here. -->
	</style>


	<style name="YKListenerTheme" parent="YKListenerThemeBase">
		<!-- Customize your theme here. -->
	</style>

	<style name="YKListenerTheme.MaterialButton" parent="YKListenerTheme">
		<item name="colorButtonNormal">?attr/colorPrimary</item>
		<item name="android:textColor">@color/LWhite</item>
	</style>

</resources>
